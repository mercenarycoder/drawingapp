<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:background="#A91E1C1C"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:background="#9F000000">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/cross"
            android:layout_margin="5dp"
            android:id="@+id/clear_screen"
            android:layout_weight="1"
            android:background="@drawable/btn_round2"
            android:padding="10dp"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/lock"
            android:layout_margin="5dp"
            android:id="@+id/lock"
            android:layout_weight="1"
            android:background="@drawable/btn_round2"
            android:padding="10dp"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_eye_god"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:id="@+id/eye_god"
            android:background="@drawable/btn_round2"
            android:padding="10dp"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_color_wheel"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:id="@+id/blur_thing"
            android:background="@drawable/btn_round2"
            android:padding="10dp"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_rubber"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:id="@+id/change_back"
            android:background="@drawable/btn_round2"
            android:padding="10dp"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings_final"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:id="@+id/saved_ss"
            android:background="@drawable/btn_round2"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:background="#9F000000">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/undo"
            android:layout_margin="2dp"
            android:id="@+id/undo"
            android:background="@drawable/btn_round2"
            android:layout_weight="1"
            android:padding="10dp"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/shop_final"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:id="@+id/save"
            android:background="@drawable/btn_round2"
            android:padding="10dp"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/redo"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:id="@+id/redo"
            android:background="@drawable/btn_round2"
            android:padding="10dp"/>
    </LinearLayout>
    <com.g.baseassignments.PaintView
        android:id="@+id/paintView"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>